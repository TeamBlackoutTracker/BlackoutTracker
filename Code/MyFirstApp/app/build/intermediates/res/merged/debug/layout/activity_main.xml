<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myfirstapp.HomeScreen"
    android:orientation="vertical"
    android:animateLayoutChanges="false">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@drawable/customborder"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/blackout_tracker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="40sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Button
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/new_"
            android:textColor="#545454"
            android:background="@drawable/common_full_open_on_phone"
            android:layout_weight="1"
            android:onClick="newHist"/>

        <Button
            android:textSize="20sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/old_"
            android:textColor="#545454"
            android:background="@android:drawable/ic_dialog_map"
            android:layout_weight="1"
            android:onClick="oldHist"/>

    </LinearLayout>

</LinearLayout>
