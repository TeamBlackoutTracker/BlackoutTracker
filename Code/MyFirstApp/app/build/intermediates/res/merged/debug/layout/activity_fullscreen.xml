<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fullscreen_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.myfirstapp.FullscreenActivity"
    android:orientation="vertical">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="131dp"

        android:id="@+id/topSection"
        android:weightSum="1">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/customborder"
            android:weightSum="1"
            android:layout_weight="0.61">

            <TextView
                android:text="@string/setup_history"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/createTimeline"
                android:textSize="31sp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textColor="#fff"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:weightSum="1">

            <TextView
                android:text="@string/description"
                android:layout_width="318dp"
                android:layout_height="87dp"
                android:textSize="14sp"
                android:layout_marginStart="23dp"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="10dp"

                android:id="@+id/Info"
                android:layout_weight="0.26" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="272dp"
        android:layout_height="99dp"
        android:id="@+id/middleSection1"
        android:fadingEdge="horizontal">

        <TextView
            android:text="@string/duration"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/duration"
            android:layout_weight="8.74"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="35dp"
            android:textColor="#545454"
            android:textSize="18sp" />

        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/numberPicker" />

        <TextView
            android:text="@string/hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hours"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="35dp"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="13dp"
        android:id="@+id/divider1">

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:id="@+id/middleSection2">

        <TextView
            android:text="@string/interval_frequency"
            android:textStyle="bold"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:id="@+id/interval_frequencyP1"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="35dp"
            android:textColor="#545454"
            android:textSize="18sp" />

        <NumberPicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/numberPicker2" />

        <TextView
            android:text="@string/mins"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/mins"
            android:layout_weight="1"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:id="@+id/divider2"></LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="149dp"
        android:id="@+id/middleSection3">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="1">

            <TextView
                android:text="@string/media_capture_types"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/media_capture_types"
                android:textSize="18sp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="#545454" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal">

            <CheckBox
                android:text="@string/video_checkbox"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:id="@+id/video_checkbox"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:buttonTint="#4c9dd5"
                android:textColor="#545454"
                android:layout_weight="1" />

            <CheckBox
                android:text="@string/picture_checkbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:buttonTint="#4c9dd5"
                android:textColor="#545454"
                android:id="@+id/picture_checkbox"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            >

            <CheckBox
                android:text="@string/text_checkbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="#4c9dd5"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:textColor="#545454"
                android:id="@+id/text_checkbox"
                android:layout_weight="1" />

            <CheckBox
                android:text="@string/v_checkbox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:buttonTint="#4c9dd5"
                android:textColor="#545454"
                android:id="@+id/voice_checkbox"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="20dp"
        android:paddingLeft="20dp">

        <Button
            android:text="@string/cancel_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cancel_button"
            android:layout_weight="1"
            android:onClick="cancelHist"/>

        <Button
            android:text="@string/create_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/create_button"
            android:layout_weight="1"
            android:onClick="Hist"/>

    </LinearLayout>

</LinearLayout>
